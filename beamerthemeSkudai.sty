\pgfdeclareimage[width=\paperwidth]{footer}{nav-footer-unram}
\pgfdeclareimage[width=\paperwidth]{header}{nav-header-unram}
\pgfdeclareimage[width=\paperwidth]{header-title}{title-header-unram}
\pgfdeclareimage[width=\paperwidth]{footer-title}{title-footer-unram}
\pgfdeclareimage[width=.12\paperwidth]{small-logo}{univ_mataram-ok}
\pgfdeclareimage[width=.17\paperwidth]{large-logo}{univ_mataram-ok}

\definecolor{UTMRed}{RGB}{112,12,41}
\definecolor{UTMGold}{RGB}{249,199,77}
\definecolor{UTMYellow}{RGB}{255,255,255}
\definecolor{Hitam}{RGB}{0,0,0}
\setbeamercolor{background canvas}{bg=UTMYellow}
\usecolortheme[named=UTMRed]{structure}

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{headline}{%
\pgfuseimage{header}%
\vskip0pt%
\pgftext[at=\pgfpoint{1pt}{-5pt},left,top]{\pgfuseimage{small-logo}}%
}
\setbeamertemplate{footline}{%
\hfill\usebeamercolor[fg]{structure}\insertframenumber\hspace*{10pt}\strut\vskip0pt%
\pgfuseimage{footer}%
}
\setbeamertemplate{frametitle}[default][center]
\addtobeamertemplate{frametitle}{\vskip12pt}{}
\setbeamerfont{frametitle}{series=\bfseries}
\setbeamerfont{title}{series=\bfseries}
\setbeamercolor{title}{fg=Hitam}
\setbeamercolor{frametitle}{fg=Hitam}
\setbeamertemplate{itemize items}[circle]

\addtobeamertemplate{title page}{%
\begin{pgfpicture}
	\pgf@relevantforpicturesizefalse
	\pgftransformxshift{-\Gm@lmargin}
	\pgftransformyshift{88pt}
	\pgfpathrectanglecorners{\pgfpoint{0pt}{0pt}}{\pgfpoint{\paperwidth}{-.25\paperheight}}
	\pgftext[at=\pgfpoint{.5\paperwidth}{-.35\paperheight},center,bottom]{\pgfuseimage{header-title}}
\end{pgfpicture}%
\begin{pgfpicture}
\pgf@relevantforpicturesizefalse
\pgftransformxshift{-\Gm@lmargin}
\pgftransformyshift{28pt}
\pgfpathrectanglecorners{\pgfpoint{0pt}{0pt}}{\pgfpoint{\paperwidth}{-.25\paperheight}}
\pgftext[at=\pgfpoint{.5\paperwidth}{-.35\paperheight},center,bottom]{\pgfuseimage{large-logo}}
\end{pgfpicture}%
\vskip36pt%
\begin{pgfpicture}
	\pgf@relevantforpicturesizefalse
	\pgftransformxshift{-\Gm@lmargin}
	\pgftransformyshift{-105pt}
	\pgfpathrectanglecorners{\pgfpoint{0pt}{0pt}}{\pgfpoint{\paperwidth}{-.25\paperheight}}
	\pgftext[at=\pgfpoint{.5\paperwidth}{-.35\paperheight},center,bottom]{\pgfuseimage{footer-title}}
\end{pgfpicture}%

}{}